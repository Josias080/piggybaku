<div class="navbar-wagon">

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      Logged in as <strong><%= current_or_guest_user.username %></strong> |

      <% if guest_user? %>
        <%= link_to "Become a member", new_user_registration_path %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <%= t(".sign_out", default: "Log out") %>
        <% end %>
      <% else %>
        <%= link_to "Change Profile", edit_user_registration_path %> |

      <!-- Links when logged in -->
      <%= link_to destroy_user_session_path, method: :delete do %>
        <%= t(".sign_out", default: "Log out") %>
      <% end %>
    <% end %>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
<div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-left navbar-wagon-dropdown-menu">
        <li><%= link_to "HOME", root_path %></li>
        <% if user_signed_in? %>
          <li class="add-padding">YOU ARE <%= current_or_guest_user.username %></li>
          <% if guest_user? %>
            <li><%= link_to "BECOME A MEMBER", new_user_registration_path %></li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <li class="add-padding"><%= t(".sign_out", default: "LEAVE") %></li>
            <% end %>
          <% else %>
            <li><%= link_to "CHANGE PROFILE", edit_user_registration_path %></li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <li class="add-padding"><%= t(".sign_out", default: "LOG OUT") %></li>
            <% end %>
          <% end %>
          <% else %>
          <li><%= link_to t(".sign_up", default: "SIGN UP"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to t(".sign_in", default: "LOGIN"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <% end %>
        <li><a href="#">ABOUT</a></li>
        <li><a href="#">CONTACT</a></li>
      </ul>
    </div>
  </div>

    <%= render 'shared/toggle_animal_btn' %>

</div>

