<%= render 'shared/toggle_animal_btn' %>
<div class="top-container">
  <h1 class="logo-container"><%= image_tag 'title_img.png' %></h1>
  <div class="animal-container">
    <div class="toggle-area" id="baku-img"><%= image_tag 'baku.png' %></div>
    <div class="toggle-area hidden" id="piggy-img"><%= image_tag 'pig.png' %></div>
  </div>
</div>
<div class="form-container">
  <div id="baku-form" class="toggle-area">
    <%= render partial: "form", locals: { feeling: @feeling, is_baku: true } %>
  </div>
  <div class="hidden toggle-area" id="piggy-form">
   <%= render partial: "form", locals: { feeling: @feeling, is_baku: false } %>
 </div>
</div>
