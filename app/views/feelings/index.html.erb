<div class="container">
  <div class="row">
      <div class="col-xs-6 col-sm-6">
        <div class="card">
          <% @negative_count.times do  %>
            <%= image_tag 'baku_icon.png' %>
          <% end %>
          <div class="card-description">
            <h1><%= @negative_count %></h1>
          </div>
        </div>
        <div class="card">
          <% @positive_count.times do  %>
            <%= image_tag 'pig_icon.png' %>
          <% end %>
          <div class="card-description">
            <h1><%= @positive_count %></h1>
          </div>
        </div>
      </div>
  </div>
</div>


<%= render partial: "shared/messages", feeling: @feelings %>

<div class="total-money text-right">
  <% @sum = 0 %>
  <% @feelings.each do |feeling| %>
    <% @sum += feeling.price_cents %>
  <% end %>
  <p> Total: Â¥<%= @sum %> </p>
</div>
