<div class="form-container text-center" id="baku_form">
  <form action="/feelings" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'feeling[is_positive]', !is_baku %>
      <% if is_baku %><!-- baku -->
        <h3 class="font-round-title"><span class="display-block">what do you want to </span><span class="font-pink">forget?</span></h3>
        <div class="form-group">
          <i class="fas fa-pencil-alt"></i>
          <div class="text-area">
              <input value="<%= @feeling.content %>" type="text" name="feeling[content]" placeholder="thought you want to let go" class="form-control">
          </div>
        </div>
        <h3 class="font-round-title">set a <span class="font-pink">price</span> for your thought</h3>
        <div class="form-group">
          <i class="fas fa-yen-sign"></i>
          <div class="price-area">
              <input type="text" name="feeling[price_cents]" placeholder="100" class="form-control">
          </div>
        </div>
        <input type="submit" class="font-round-title btn btn-pink" value="forget!">


      <% else %><!-- pig -->
        <h3 class="font-round-title"><span class="display-block">which memory</span> would you like to <span class="font-light-blue">store?</span></h3>
        <div class="form-group">
          <i class="fas fa-pencil-alt"></i>
          <div class="text-area">
              <input type="text" name="feeling[content]" placeholder="put small happiness"  class="form-control">
          </div>
        </div>
        <h3 class="font-round-title">set a <span class="font-light-blue">price</span> for your memory</h3>
        <div class="form-group">
          <i class="fas fa-yen-sign"></i>
          <div class="price-area">
              <input type="text" name="feeling[price_cents]" placeholder="100" class="form-control">
          </div>
        </div>
        <input type="submit" class="font-round-title btn btn-light-blue" value="store">
      <% end %>
      <%= hidden_field_tag :is_positive, is_baku %>
    </form>
</div>
