<div class="form-container text-center" id="baku_form">
  <form action="/feelings" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="form-group">
      <i class="fas fa-pencil-alt"></i>
      <div class="text-area">
        <% if is_baku %>
          <input type="text" name="feeling[content]" placeholder="what do you want to forget?" class="form-control">
        <% else %>
          <input type="text" name="feeling[content]" placeholder="what do you want to remember?"  class="form-control">
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <i class="fas fa-yen-sign"></i>
      <div class="price-area">
        <% if is_baku %>
          <input type="text" name="feeling[price_cents]" placeholder="how much would you pay to forget?" class="form-control">
        <% else %>
          <input type="text" name="feeling[price_cents]" placeholder="how much will you give to remember?" class="form-control">
        <% end %>
      </div>
    </div>

    <%= hidden_field_tag :is_positive, is_baku %>

    <input type="submit" class="btn btn-primary">
  </form>
</div>
